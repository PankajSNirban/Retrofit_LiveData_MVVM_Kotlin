<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/llProgressBar"
        layout="@layout/content_main"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_header_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:text="@string/cities_header"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tokyo_city_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/tv_header_city" />

    <TextView
        android:id="@+id/tv_header_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_tokyo_city_list"
        android:text="@string/food_header"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tokyo_food_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header_food"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>
